<!DOCTYPE html>
<html>
  <head>
    <title>Item Finder</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <main>
    <body class="<%= @background_color %>">
      <%= yield %>
    </body>
  </main>

  <!-- Hide the footer on System Admin pages -->
  <% if controller_name == "welcome" %>
    <footer class="page-footer">
      <div class="footer-copyright">
        <div class="container">
          <%= link_to 'Item Finder', welcome_index_path, class: 'black-text' %>

          <div class="right">
            <%= link_to 'Feedback', welcome_feedback_form_path, class: 'teal-text text-darken-1' %>
            &emsp;
            <%= link_to 'More Info', welcome_more_info_path, class: 'teal-text text-darken-1' %>
          </div>
        </div>
      </div>
    </footer>
  <% end %>
</html>
